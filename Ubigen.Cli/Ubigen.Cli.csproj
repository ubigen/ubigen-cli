        <PackageReference Include="Spectre.Console.Cli" Version="0.50.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Ubigen.Core\Ubigen.Core.csproj" />
    </ItemGroup>

