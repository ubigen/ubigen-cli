<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>ubigen</ToolCommandName>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <RootNamespace>Ubigen.Cli</RootNamespace>
        <PackageId>ubigen</PackageId>
        <Version>1.0.0</Version>
        <Authors>UbiGen Team</Authors>
        <Description>Domain‑first microservice generator CLI.</Description>
